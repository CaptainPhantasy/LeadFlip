# ==============================================================================
# LeadFlip Environment Variables Template
# ==============================================================================
# Copy this file to .env.local and fill in your actual values
# NEVER commit .env.local to version control
#
# Required Variables: *** MARKED WITH ASTERISKS ***
# Optional Variables: Unmarked (for additional features)
# ==============================================================================

# ==============================================================================
# DATABASE - Supabase PostgreSQL ***REQUIRED***
# ==============================================================================
NEXT_PUBLIC_SUPABASE_URL=https://xxxxx.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=eyJhbGciOi...
SUPABASE_SERVICE_ROLE_KEY=eyJhbGciOi...

# ==============================================================================
# AUTHENTICATION - Clerk ***REQUIRED***
# ==============================================================================
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_...
CLERK_SECRET_KEY=sk_test_...

# Optional: Customize Clerk redirect URLs
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/sign-in
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/sign-up
NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL=/consumer
NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL=/consumer

# ==============================================================================
# AI SERVICES ***REQUIRED***
# ==============================================================================
# Anthropic Claude API (main orchestrator + reasoning)
ANTHROPIC_API_KEY=sk-ant-...

# OpenAI API (Realtime voice API for AI calls)
OPENAI_API_KEY=sk-...

# ==============================================================================
# TELEPHONY - SignalWire ***REQUIRED FOR AI CALLS & SMS***
# ==============================================================================
# Get credentials from https://your-space.signalwire.com
SIGNALWIRE_PROJECT_ID=2f9ce47f-c556-4cf2-803c-2b1525b35b34
SIGNALWIRE_API_TOKEN=PT2ec5c1cb7098ec694e2825877b92d42e21386e16bebe831b
SIGNALWIRE_SPACE_URL=legacyai.signalwire.com
SIGNALWIRE_PHONE_NUMBER=+18888915040

# Optional: Backwards compatibility with Twilio-style env vars
# (Some code may still reference these)
TWILIO_ACCOUNT_SID=${SIGNALWIRE_PROJECT_ID}
TWILIO_AUTH_TOKEN=${SIGNALWIRE_API_TOKEN}
TWILIO_PHONE_NUMBER=${SIGNALWIRE_PHONE_NUMBER}

# ==============================================================================
# EMAIL NOTIFICATIONS - SendGrid ***REQUIRED***
# ==============================================================================
# Get your API key from https://app.sendgrid.com/settings/api_keys
# You must verify your FROM_EMAIL in SendGrid before sending
SENDGRID_API_KEY=SG.your-sendgrid-api-key
SENDGRID_FROM_EMAIL=noreply@leadflip.com
SENDGRID_FROM_NAME=LeadFlip

# Optional: Test email for connection testing
# SENDGRID_TEST_EMAIL=your-email@example.com

# ==============================================================================
# EMAIL NOTIFICATIONS - Mailgun (Alternative to SendGrid)
# ==============================================================================
# Uncomment if using Mailgun instead
# MAILGUN_API_KEY=your-mailgun-api-key
# MAILGUN_DOMAIN=mg.leadflip.com

# ==============================================================================
# REDIS - Upstash ***REQUIRED FOR AI CALLS***
# ==============================================================================
# For BullMQ job queue (call worker)
REDIS_URL=rediss://default:password@vocal-polliwog-15926.upstash.io:6379

# Legacy support (if your code uses these)
UPSTASH_REDIS_URL=redis://xxxxx
UPSTASH_REDIS_TOKEN=xxxxx

# ==============================================================================
# WEBSOCKET SERVER ***REQUIRED FOR AI CALLS***
# ==============================================================================
# Set to deployed URL after deploying websocket server to Railway/Fly.io
# Development: ws://localhost:8080
# Production: wss://leadflip-websocket.railway.app or wss://leadflip-websocket.fly.dev
WEBSOCKET_SERVER_URL=ws://localhost:8080
WEBSOCKET_PORT=8080

# ==============================================================================
# APPLICATION SETTINGS ***REQUIRED***
# ==============================================================================
# Your app's public URL
NEXT_PUBLIC_APP_URL=http://localhost:3002

# Node environment
NODE_ENV=development

# ==============================================================================
# OPTIONAL INTEGRATIONS
# ==============================================================================
# Slack notifications (for admin alerts)
# SLACK_BOT_TOKEN=xoxb-your-slack-bot-token
# SLACK_CHANNEL_ID=C01234567890

# Google Places API (for geocoding business addresses)
# GOOGLE_PLACES_API_KEY=your-google-api-key

# ==============================================================================
# MONITORING & OBSERVABILITY (Production recommended)
# ==============================================================================
# SENTRY_DSN=https://your-sentry-dsn
# LOGFLARE_API_KEY=your-logflare-key

# ==============================================================================
# FEATURE FLAGS
# ==============================================================================
# Enable/disable call recording
ENABLE_RECORDING=false

# Skip sending actual notifications in development (logs only)
# DEV_SKIP_NOTIFICATIONS=true

# ==============================================================================
# DEPLOYMENT (Set by Railway/Fly.io automatically)
# ==============================================================================
# RAILWAY_TOKEN=your-railway-token
# FLY_API_TOKEN=your-fly-api-token
